<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="PrimaryButtonTheme">
        <item name="android:enabled">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/width_12_px</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:elevation">2dp</item>
    </style>


    <style name="SecondaryButtonTheme">
        <item name="android:enabled">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/width_12_px</item>
        <item name="android:background">@drawable/secondary_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="TertiaryButtonTheme">
        <item name="android:enabled">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/width_12_px</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/tertiary_button_background</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:elevation">2dp</item>
    </style>


    <style name="CtEditTextTheme">
        <item name="android:colorControlNormal">@color/sec_blue_dark</item>
        <item name="android:colorControlActivated">@color/sec_blue_dark</item>
        <item name="android:enabled">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:drawableStart">@drawable/ic_plus</item>
        <item name="colorControlHighlight">@color/sec_blue_dark</item>
        <item name="android:textColor">@color/ter_gray_1</item>
    </style>

    <style name="radiobutton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@drawable/toggle_card_detail</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="MyEditTextTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/ter_gray_3</item>
        <item name="android:textColorHint">@color/ter_gray_3</item>
        <item name="colorControlNormal">@color/ter_gray_1</item>
        <item name="colorControlActivated">@color/prim_Red</item>
        <item name="colorControlHighlight">@color/prim_Red</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
        <!--<item name="hintTextAppearance">@style/TextAppearence.TextInputLayout.Gray</item>-->
    </style>

    <style name="MyEditTextGrayTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/ter_gray_3</item>
        <item name="android:textColorHint">@color/ter_gray_3</item>
        <item name="colorControlNormal">@color/ter_gray_3</item>
        <item name="colorControlActivated">@color/prim_Red</item>
        <item name="colorControlHighlight">@color/prim_Red</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
    </style>

    <style name="TextAppearence.TextInputLayout.Gray" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/ter_gray_3</item>
        <item name="android:textSize">@dimen/text_size_16_sp</item>
    </style>


    <style name="CtSpinnerTheme">
        <item name="android:spinnerItemStyle">@style/spinnerItemStyle</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/ter_gray_3</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/ter_gray_3</item>
    </style>

</resources>
